<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_run"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:background="#2320"
            android:gravity="center"
            android:text="Run sh"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/tv_run_setting"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:background="#2320"
            android:gravity="center"
            android:text="cmd_default"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_run_info"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#2320"
        android:gravity="center"
        android:text="设置的时间"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tv_run_info_time"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#2320"
        android:gravity="center"
        android:text="Info"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_network_request"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="#2320"
        android:gravity="center"
        android:text="Request Net"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/et_hour"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="设置小时(24整数)"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_min"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="设置分钟(60整数)"
        android:inputType="number" />
</androidx.appcompat.widget.LinearLayoutCompat>